<svg width="500" height="300" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

  <link xmlns="http://www.w3.org/1999/xhtml" rel="stylesheet" type="text/css"
    href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css" />
  <link xmlns="http://www.w3.org/1999/xhtml" rel="stylesheet" type="text/css"
    href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.colors.min.css" />

    <title>{{title}}</title>
    <desc>{{description}}</desc>

  <foreignObject width="500" height="200">
    <main class="container-fluid" xmlns="http://www.w3.org/1999/xhtml">
      {{#if icon}}
      <img src="{{icon}}" alt="{{title}}'s icon" loading="eager" width="110px" />
      {{/if}}
      <div id="text">
        <div id="title">{{title}}</div>
        <div id="description">{{description}}</div>
      </div>
    </main>
    <style>
      main {
        display: flex;
        border-radius: 10px;
        width: 150px;
      }

      #text {
        padding-left: 10px;
        align-self: flex-end;
      }

      #title {
        font-weight: bold;
      }
    </style>
  </foreignObject>
</svg>
